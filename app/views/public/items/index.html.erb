<div class="container-xl">

  <div class="row">
    <div class="col-xl-10">
      <h3>商品一覧</h3>
    </div>
  </div>

<!--商品一覧-->
  <div>
    <% @items.each do |item| %>
      <div>
        <%= attachment_image_tag @item, :image, :fill, 40, 40, format: 'jpeg' %>
      </div>
      <div>
        <%= link_to item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </div>
      <div>
        <%= number_to_currency(item.price,  :locale => 'jp') %>
      </div>
      <% end %>
  </div>


</div>