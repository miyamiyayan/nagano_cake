<div class="container-xl">

  <div class="row">
    <div class="col-xl-10">
      <h3>商品一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"></div>

  <div class="col-md-9">

<!--商品一覧-->
    <div class="row">
      <% @items.each do |item| %>
      <div  class="col-md-3">
        <div>
          <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %>
        </div>
        <div>
          <%= link_to item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </br>
          <%= number_to_currency(item.price,  :locale => 'jp') %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


</div>