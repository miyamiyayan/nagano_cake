<h3>注文情報入力画面</h3>

<div>
  <%= form_with model:@orde, url:new_order_path, local:true do |f| %>
    <div>
      <h4>支払方法</h4>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      </br>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>

    <div>
      <h4>発送先</h4>
        <%= f.radio_button :address_option, 0 %>
          <%= f.label :mailing_full_addres, "ご自身の住所" %>
          </br>
          <%= @customer.full_address %>
      </br>
        <%= f.radio_button :address_option, 1 %>
          <%= f.label :mailing_full_addres, "登録済みの住所から選択" %>
          </br>
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
      </br>
        <%= f.radio_button :address_option, 2 %>
          <%= f.label :mailing_full_addres, "新しいお届け先" %>
          </br>
          <%= f.label '郵便番号' %><%= f.text_field :postal_code, :placeholder => "0000000" %></br>
          <%= f.label '住所' %><%= f.text_field :address, :placeholder => "東京都渋谷区〇〇" %></br>
          <%= f.label '宛名' %><%= f.text_field :name, :placeholder => "長野例" %></br>
    </div>
    <%= f.submit '確認画面へ進む' %>
  <% end %>
</div>