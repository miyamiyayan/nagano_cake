<div class="container-xl">

  <div class="row">
    <div class="col-xl-10">
      <h3>ショッピングカート</h3>
    </div>
  </div>

<div class="col-xl-12">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価（税込）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
        <th scope="col",colspan="1"></th>
      </tr>
    </thead>
<!--ここから下が可変-->
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr scope="col">
        <td>
          <%= attachment_image_tag cart_item.item, :image, :fill, 40, 40, format: 'jpeg' %>　<%= cart_item.item.name %>
        </td>
        <td>
          <%= number_to_currency(cart_item.item.with_tax_price,  :locale => 'jp') %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= number_to_currency(cart_item.subtotal,  :locale => 'jp') %>
        </td>
        <td>
          <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-success" %>
        </td>
        <% @sum += cart_item.subtotal %>
      </tr>
      <% end %>

    </tbody>
  </table>

  <div class="row">
    <div class="col-xl-8">
    </div>

    <div class="col-xl-4">
      <table>
        <tr>
          <th>合計金額</th>
          <td><%= number_to_currency(@sum, :locale => 'jp') %></td>
        </tr>
      </table>
    </div>

  </div>

</div>