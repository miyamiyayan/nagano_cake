<div class="container-xl mb-5">
  <div class="row mb-5">
    <div class="col-xl-3">
      <h3 class="bg-light text-dark text-center">配送先一覧編集</h3>
    </div>
  </div>

<!--エラーメッセージ-->
<% if @address.errors.any? %>
  <%= @address.errors.count %>件のerrorが発生しました
  <% @address.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!--住所変更-->
  <div class="row mb-5">
    <div class="col-xl-10">
      <%= form_with model:@address, url:address_path, local:true do |f| %>
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :postal_code, :placeholder => "0000000", class: 'col-xl-3 col-form-label' %>
        </div>
        <div class="form-group row">
          <%= f.label :address, "住所", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :address, :placeholder => "〇〇県××市（建物名まで）", class: 'col-xl-7 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :name, "宛名", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :name, :placeholder => "長野例", class: 'col-xl-3 col-form-label'  %>
          <span class="col-xl-4"></span>
          <div class="col-xl-2">
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>