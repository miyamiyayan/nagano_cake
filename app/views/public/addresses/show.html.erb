<h3>配送先一覧編集</h3>

<!--エラーメッセージ-->
<% if @address.errors.any? %>
  <%= @address.errors.count %>件のerrorが発生しました
  <% @address.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!--住所変更-->
<div>
  <%= form_with model:@address, url:address_path, local:true do |f| %>
    <div>
      <%= f.label '郵便番号' %><%= f.text_field :postal_code, :placeholder => "0000000" %>
    </br>
      <%= f.label '住所' %><%= f.text_field :address, :placeholder => "東京都渋谷区〇〇"  %>
    </br>
      <%= f.label '宛名' %><%= f.text_field :name, :placeholder => "長野例" %>
    </br>
      <%= f.submit '変更内容の保存' %>
    </div>
  <% end %>
</div>