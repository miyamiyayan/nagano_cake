<h3>配送先一覧／登録</h3>

<!--エラーメッセージ-->
<% if @address.errors.any? %>
  <%= @address.errors.count %>件のerrorが発生しました
  <% @address.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!--ジャンル登録-->
<div>
  <%= form_with model:@address, url:addresses_path, local:true do |f| %>
    <div>
      <%= f.label '郵便番号' %><%= f.text_field :postal_code, :placeholder => "0000000" %>
    </br>
      <%= f.label '住所' %><%= f.text_field :address, :placeholder => "東京都渋谷区〇〇"  %>
    </br>
      <%= f.label '宛名' %><%= f.text_field :name, :placeholder => "長野例" %>
    </br>
      <%= f.submit '新規登録' %>
    </div>
  <% end %>
</div>

<!--ジャンル一覧表示-->
<div>
  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="2"></th>
      </tr>
    </thead>
<!--ここから下が可変-->
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", address_path(genre.id), class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "削除する", address_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
