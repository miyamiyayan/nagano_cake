<div class="container-xl">
  <div class="row">
    <div class="col-xl-3">
      <h3 class="bg-light text-dark text-center">ログイン</h3>
    </div>
  </div>
  </br>

  <div class="row">
    <div class="col-xl-1"></div>
    <div class="col-xl-4">
      <h5 class="bg-light text-dark text-center">会員の方はこちらからログイン</h5>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-xl-2"></div>
    <div class="col-xl-9">
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class:"col-xl-3 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xl-6 col-form-label" %>
        </div>
        <div class="form-group row">
            <%= f.label :password, "パスワード", class:"col-xl-3 col-form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class:"col-xl-6 col-form-label" %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-5"></div>
    <div class="col-xl-6">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>

  </br>

  <div class="row">
    <div class="col-xl-1"></div>
    <div class="col-xl-4">
      <h5 class="bg-light text-dark text-center">会員登録がお済みでない方</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-2"></div>
    <div class="col-xl-8 text-center">
      <h5><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。</h5>
    </div>
  </div>
  </br>
</div>