<div class="container-xl">
  <div class="row">
    <div class="col-xl-1"></div>
    <div class="col-xl-5">
      <h3 class="bg-light text-dark text-center"><%= @customer.full_name %>さんの会員情報修正</h3>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-xl-2"></div>
    <div class="col-xl-10">
      <%= form_with model: @customer, url:customers_path, local:true do |f| %>

        <div class="form-group row">
          <%= f.label :last_name, "氏名", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :last_name, :placeholder => "苗字", class: 'col-xl-3 col-form-label'  %>
            <span class="col-sm-1" ></span>
          <%= f.text_field :first_name, :placeholder => "名前", class: 'col-xl-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :last_name_kana, "フリガナ", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :last_name_kana, :placeholder => "フリ", class: 'col-xl-3 col-form-label'  %>
            <span class="col-sm-1" ></span>
          <%= f.text_field :first_name_kana, :placeholder => "カナ", class: 'col-xl-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :postal_code, :placeholder => "0000000", class: 'col-xl-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :address, "住所", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :address, :placeholder => "〇〇県××市（建物名まで）", class: 'col-xl-7 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :telephone_number, "電話番号", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :telephone_number, :placeholder => "000-0000-0000", class: 'col-xl-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: 'col-xl-3 col-form-label' %>
          <%= f.text_field :email, :placeholder => "〇〇〇〇＠〇〇〇〇", class: 'col-xl-5 col-form-label'  %>
        </div>

        <br>

        <div class="row">
          <div class="col-xl-3"></div>
          <div class="col-xl-3">
            <%= f.submit '編集内容内容を保存', class: "btn btn-success" %>
          </div>
          <div class="col-xl-3">
            <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
          </div>
        </div>
       <% end %>
    </div>
  </div>
</div>

</br>