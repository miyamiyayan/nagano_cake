<div class="container-xl">

  <div class="row">
    <div class="col-xl-6">
      <h3>管理者ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-3"></div>
    <div class="col-xl-9">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-horizontal") do |f| %>

        <div class=”form-group”>
          <%= f.label :email, "メールアドレス", class:"col-sm-2 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-10 form-control" %>
        </div>
    </br>
        <div class="row">
          <div class="col-xl-2">
            <label>パスワード</label>
          </div>
          <div class="col-xl-10">
            <%= f.password_field :password, autocomplete: "current-password" %>
           </div>
        </div>
    </br>
        <div class="row">
          <div class="col-xl-2">
          </div>
          <div class="col-xl-10">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>