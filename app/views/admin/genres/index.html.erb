<h3>ジャンル一覧・追加</h3>

<!--エラーメッセージ-->
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のerrorが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!--ジャンル登録-->
<div>
  <%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
    <div>
      <%= f.label 'ジャンル名' %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
    </div>
  <% end %>
</div>

<!--ジャンル一覧表示-->
<div>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="1"></th>
      </tr>
    </thead>
<!--ここから下が可変-->
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
