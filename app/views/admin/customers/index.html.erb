<div class="container-xl">

  <div class="row">
    <div class="col-xl-10">
      <h3>会員一覧</h3>
    </div>
  </div>

<!--会員一覧-->
  <div>
  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
<!--ここから下が可変-->
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.full_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active ? '有効':'無効' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
</div>


</div>