<h1><%= @customer.full_name %>さんの会員詳細</h1>
<%= form_with model: @customer, url:admin_customer_path(@customer.id), local:true do |f| %>

  <div>
    <p>会員ID<%= @customer.id %></p>
  </div>

  <div>
    <p>名前<%= f.text_field :last_name %><%= f.text_field :first_name %></p>
  </div>
  <div>
    <p>フリガナ　<%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></p>
  </div>
  <div>
    <p>郵便番号<%= f.text_field :postal_code %></p>
  </div>
  <div>
    <p>住所<%= f.text_field :address %></p>
  </div>
  <div>
    <p>電話番号<%= f.text_field :telephone_number %></p>
  </div>
  <div>
    <p>メールアドレス<%= f.text_field :email %></p>
  </div>
  <div>
  <p>会員ステータス</p>
    <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "退会" %>
  </div>

  <%= f.submit '変更を保存' %>
<% end %>