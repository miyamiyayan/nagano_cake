<div class="container-xl mb-5">
  <div class="row">
    <div class="col-xl-1"></div>
    <div class="col-xl-5">
      <h3 class="bg-light text-dark text-center"><%= @customer.full_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-2"></div>
      <div class="col-xl-8">

        <div class="row">
          <div class="col-xl-3">
            <p>会員ID</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.id %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3">
            <p>氏名</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.last_name %> <%= @customer.first_name %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3">
            <p>フリガナ</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3">
            <p>郵便番号</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.postal_code %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3">
            <p>住所</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.address %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3">
            <p>電話番号</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.telephone_number %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3">
            <p>メールアドレス</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.email %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3">
            <p>会員ステータス</p>
          </div>
          <div class="col-xl-9">
            <p><%= @customer.is_active ? '有効':'退会' %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-3"></div>
          <div class="col-xl-2">
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
          </div>
          <div class="col-xl-1"></div>
          <div class="col-xl-4">
            <%= link_to "注文履歴一覧", admin_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
  </div>
</div>
