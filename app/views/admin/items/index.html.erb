<div class="container-xl">
  
  <div class="row">
    <div class="col-xl-10">
      <h3>商品一覧</h3>
    </div>
    <div class="col-xl-2">
      <h3>商品追加</h3>
    </div>
  </div>

<!--商品一覧-->
  <div>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
<!--ここから下が可変-->
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.price,  :locale => 'jp') %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中':'販売停止' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


</div>