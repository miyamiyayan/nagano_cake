<div class="container-xl">

  <div class="row">
    <div class="col-xl-2">
      <h3 class="bg-light text-dark text-center">商品一覧</h3>
    </div>
    <div class="col-xl-8"></div>
    <div class="col-xl-2 text-right">
      <%= link_to "商品追加", new_admin_item_path, class: "btn btn-danger" %>
    </div>
  </div>

<!--商品一覧-->
  <div>
  <table class="table">
    <thead class="table-secondary">
      <tr>
        <th style="width: 10%" scope="col">商品ID</th>
        <th style="width: 35%" scope="col">商品名</th>
        <th style="width: 15%" scope="col">税抜価格</th>
        <th style="width: 20%" scope="col">ジャンル</th>
        <th style="width: 20%" scope="col">ステータス</th>
      </tr>
    </thead>
<!--ここから下が可変-->
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <th scope="col"><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.price,  :locale => 'jp') %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中' :'販売停止' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center h6"><%= paginate @items %></div>
</div>


</div>