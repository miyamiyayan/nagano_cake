<div class="container-xl">

  <div class="row">
    <div class="col-xl-10">
      <h3>商品一覧</h3>
    </div>
    <div class="col-xl-2">
      <%= link_to "商品追加", new_admin_item_path, class: "btn btn-primary" %>
    </div>
  </div>

<!--商品一覧-->
  <div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
<!--ここから下が可変-->
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <th scope="col"><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.price,  :locale => 'jp') %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中':'販売停止' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


</div>