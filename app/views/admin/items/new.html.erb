<div class="container-xl">
  <div class="row">
    <div class="col-xl-2"></div>

    <div class="col-xl-3">
      <h3 class="bg-light text-dark text-center">商品新規登録</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-4"></div>
    <div class="col-xl-8">
  <%= form_with model: @item, url:admin_items_path(@item.id), local:true do |f| %>

    <div class="form-group row">
      <%= f.label :image, "商品画像", class: 'col-xl-3 col-form-label' %>
      <%= f.attachment_field :image, class: 'col-xl-5 col-form-label' %>
    </div>
    <div class="form-group row">
      <%= f.label :name, "商品名", class: 'col-xl-3 col-form-label' %>
      <%= f.text_field :name, :placeholder => "商品名", class: 'col-xl-5 col-form-label'  %>
    </div>
    <div class="form-group row">
      <%= f.label :introduction, "商品説明", class: 'col-xl-3 col-form-label' %>
      <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します", class: 'col-xl-5 col-form-label' %>
    </div>
    <div class="form-group row">
      <%= f.label :genre_id, "ジャンル", class: 'col-xl-3 col-form-label' %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '選択してください' }, class: 'col-xl-5 col-form-label' %>
    </div>
    <div class="form-group row">
      <%= f.label :genre_id, "税抜価格", class: 'col-xl-3 col-form-label' %>
      <%= f.text_field :price, :placeholder => "1000", class: 'col-xl-5 col-form-label' %><span class="d-flex align-items-center">円</span>
    </div>
    <div class="form-group row">
      <%= f.label :is_active, "販売ステータス", class: 'col-xl-3 col-form-label' %>
      <span class="col-xl-5 col-form-label">
        <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %>
      </span>
    </div>
    <div class="row">
      <div class="col-xl-4"></div>
      <div class="col-xl-4">
        <%= f.submit '新規登録', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
  </br>
</div>