  <div class="container-xl">
  <div class="row">
    <div class="col-xl-2"></div>

    <div class="col-xl-3">
      <h3 class="bg-light text-dark text-center">商品詳細</h3>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-xl-1"></div>
    <div class="col-xl-3">
      <%= attachment_image_tag @item, :image, :fill, 250, 200, format: 'jpeg' %>
    </div>

    <div class="col-xl-8">
      <div class='row'>
        <div class='col-xl-3'><h5>商品名</h5></div>
        <div class='col-xl-6'><h4><%= @item.name %></h4></div>
      </div>
      <div class='row'>
        <div class='col-xl-3'><h5>商品説明</h5></div>
        <div class='col-xl-6'><h4><%= @item.introduction %></h4></div>
      </div>
      <div class='row'>
        <div class='col-xl-3'><h5>ジャンル</h5></div>
        <div class='col-xl-6'><h4><%= @item.genre.name %></h4></div>
      </div>
      <div class='row'>
        <div class='col-xl-3'><h5>税込価格</br>（税抜き価格）</h5></div>
        <div class='col-xl-6'><h4><%= @item.with_tax_price %> (<%= @item.price %>) 円</h4></div>
      </div>
      <div class='row'>
        <div class='col-xl-3'><h5>販売ステータス</h5></div>
        <div class='col-xl-6'><h4><%= @item.is_active ? '販売中':'販売停止' %></h4></div>
      </div>
    <div>
  </div>
  <div class='row'>
    <div class="col-xl-3"></div>
    <div class="col-xl-4">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg" %>
    </div>
  </div>
  </br>
</div>