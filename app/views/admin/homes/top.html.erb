<div class="container-xl">

  <div class="row">
    <div class="col-xl-3">
      <h3 class="bg-light text-dark text-center">注文履歴一覧</h3>
    </div>
  </div>

<!--注文履歴-->

  <div class="row">
    <div class="col-xl-1"></div>
    <table class="table col-xl-10">
      <thead class="table-secondary">
        <tr>
          <th style="width: 30%" scope="col">購入日時</th>
          <th style="width: 30%" scope="col">購入者</th>
          <th style="width: 20%" scope="col">注文個数</th>
          <th style="width: 20%" scope="col">注文ステータス</th>
        </tr>
      </thead>
<!--ここから下が可変-->
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.order_details.sum(:amount) %> 個</td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center h6 mb-3"><%= paginate @orders %></div>


</div>