<!DOCTYPE html>
<html>
  <head>
    <title>ながのCAKE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/71eae7e7d8.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark ">
      <div class="container">
        <a class="navbar-brand p-3" href="/">LOGO</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

    <!--ユーザーでサインインの場合-->
      <% if customer_signed_in? %>
        <li class="header_rist">
          <%= link_to "マイページ", customers_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "商品一覧", items_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "カート",  cart_items_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-primary btn-sm" %>
        </li>

    <!--管理者としてログイン場合-->
      <% elsif admin_signed_in? %>
        <li class="header_rist">
          <%= link_to "商品一覧", admin_items_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "会員一覧", admin_customers_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "注文履歴一覧", admin_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-primary btn-sm" %>
        </li>

      <% else %>
      <!--ログインしていないとき-->
        <li class="header_rist">
          <%= link_to "About", about_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "商品一覧", items_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-primary btn-sm" %>
        </li>
        <li class="header_rist">
          <%= link_to "ログイン", new_customer_session_path, class: "btn btn-primary btn-sm" %>
        </li>

      <% end %>

          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main>

<!--ログイン後のメッセージ-->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>
  </main>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>footer</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>