<!DOCTYPE html>
<html>
  <head>
    <title>ながのCAKE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/71eae7e7d8.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="border-bottom border-dark">
    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">LOGO</a>
        <div>
          <ul class="navbar-nav ml-auto">

<!--ユーザーでサインインの場合-->
          <% if customer_signed_in? %>
            <li class="header_rist">
              <%= link_to "マイページ", customers_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "商品一覧", items_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "カート",  cart_items_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-primary btn-sm" %>
            </li>

<!--管理者としてログイン場合-->
          <% elsif admin_signed_in? %>
            <li class="header_rist">
              <%= link_to "商品一覧", admin_items_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "会員一覧", admin_customers_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "注文履歴一覧", admin_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-primary btn-sm" %>
            </li>

<!--ログインしていないとき-->
          <% else %>
            <li class="header_rist">
              <%= link_to "About", about_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "商品一覧", items_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-primary btn-sm" %>
            </li>
            <li class="header_rist">
              <%= link_to "ログイン", new_customer_session_path, class: "btn btn-primary btn-sm" %>
            </li>
          <% end %>
          </ul>

 <!--実験　検索機能-->
          <ul>
            <il class="search-form">
              <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= f.text_field :keyword, value: @keyword %>
              <%= f.submit "検索" %>
              <% end %>
            </il>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main>

<!--ログイン後のメッセージ-->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>
  </main>

  <footer class="border-top border-dark">
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>ながのケーキ</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>